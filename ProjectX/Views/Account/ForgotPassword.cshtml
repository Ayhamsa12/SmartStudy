@model ForgotPasswordViewModel

@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/css/ForgetPasswordCss.css">
<div class="FP">
    <div class="form-container">
        <div class="logo-container">
            Forgot Password
        </div>

        <form class="form" asp-action="ForgotPassword" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
            <button type="submit" class="form-submit-btn">Reset Password</button>
    </form>
</div>
</div>