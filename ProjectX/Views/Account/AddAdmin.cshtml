@model ProjectX.ViewModels.AddAdminViewModel
@{
    ViewData["Title"] = "add admin";
    Layout = "_Layout2";
}
<head>
    <link rel="stylesheet" href="/css/CreateSubject.css">
<style>

</style>
</head>
<body>
    <div class="addadmin">
        <h2>Add Admin</h2>
        <div class="format">
    <form asp-action="AddAdmin" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
                    <label asp-for="UserName" style="display: inline-table; width: 110px;"></label>
                <input asp-for="UserName" class="input" placeholder="First name" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
                    <label asp-for="Email" style="display: inline-table; width: 110px;">Email Address</label>
                <input asp-for="Email" class="input" placeholder="Example@gmail.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
                    <label asp-for="Password" style="display: inline-table; width: 110px;"></label>
                <input asp-for="Password" type="password" class="input" placeholder="EXAMPLE@1" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Add more fields as needed -->
            <button type="submit" class="submitBtn">
                Add Admin
                <svg fill="white" viewBox="0 0 448 512" height="1em" class="arrow">
                    <path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"></path>
                </svg>
            </button>
    </form>
    </div>
</div>
</body>