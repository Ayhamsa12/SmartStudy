@model ProjectX.ViewModels.UserQuestionViewModel
<link rel="stylesheet" href="/css/QandASS.css" />


<div class="qq-container">
<h2>Delete Question</h2>
<style>
    .dq {
        padding: 100px;
        padding-left: 300px;
    }
</style>
<div class="dq">
    <h4>Question Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <!-- Add other details you want to display -->

    </dl>
    <form asp-action="DeleteQuestionConfirmed" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this question?');" />
        <a asp-action="QandA">Back to Questions</a>
    </form>
</div>
</div>