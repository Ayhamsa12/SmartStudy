@model ProjectX.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Edit Subject";
    Layout = "_Layout2";
}

<style>
    .AR {
        padding: 31px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    form1 {
        DISPLAY: flex;
        MARGIN: 10PX;
    }

    .div_btn {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .input {
        width: 250px;
        background-color: #f5f5f5;
        color: #242424;
        min-height: 40px;
        border-radius: 4px;
        outline: none;
        border: none;
        line-height: 1.15;
        box-shadow: 0px 10px 20px -18px;
        padding-inline: 10px;
        margin: 5px;
    }


    input:focus {
        border-bottom: 2px solid #5b5fc7;
        border-radius: 4px 4px 2px 2px;
    }

    input:hover {
        outline: 1px solid lightgrey;
    }

    .format {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        margin: 20PX;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        align-content: center;
        align-items: center;
    }

    form {
        display: flex;
        flex-direction: column;
        align-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    .submitBtn {
        width: 140px;
        height: 40px;
        border-radius: 30px;
        border: none;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.13);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-weight: 600;
        cursor: pointer;
        color: white;
        background: linear-gradient(136deg, #0f0c29, #302b63, #24243e);
        letter-spacing: 0.7px;
    }

        .submitBtn:hover .arrow {
            animation: slide-in-left 0.6s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
        }



        .submitBtn:active {
            transform: scale(0.97);
        }
</style>

<body>
    <div class="AR">
        <div class="format">
            <center><h2>Edit Subject</h2></center>
            <form method="post" asp-action="Edit">

                <div class="form-group" style="margin: 20px;">
                    <label asp-for="SubjectName">Subject-Name</label>
                    <input asp-for="SubjectName" class="input" placeholder="SubjectName">
                    <span asp-validation-for="SubjectName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="input"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <center>  <button type="submit" class="submitBtn">Update</button></center>
            </form>
        </div>
    </div>
</body>
