@using ProjectX.ViewModels
@model CategoryViewModel
@{
    Layout = "_Layout2";
}
<style>
    .AR {
        padding: 31px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    form1 {
        DISPLAY: flex;
        MARGIN: 10PX;
    }

    .div_btn {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .input {
        width: 250px;
        background-color: #f5f5f5;
        color: #242424;
        min-height: 40px;
        border-radius: 4px;
        outline: none;
        border: none;
        line-height: 1.15;
        box-shadow: 0px 10px 20px -18px;
        padding-inline: 10px;
        margin: 5px;
    }


    input:focus {
        border-bottom: 2px solid #5b5fc7;
        border-radius: 4px 4px 2px 2px;
    }

    input:hover {
        outline: 1px solid lightgrey;
    }

    .format {
        width: 700PX;
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        margin: 20PX;
        display: flex;
        justify-content: center;
    }

    .submitBtn {
        width: 140px;
        height: 40px;
        border-radius: 30px;
        border: none;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.13);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-weight: 600;
        cursor: pointer;
        color: white;
        background: linear-gradient(136deg, #0f0c29, #302b63, #24243e);
        letter-spacing: 0.7px;
    }

        .submitBtn:hover .arrow {
            animation: slide-in-left 0.6s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
        }



        .submitBtn:active {
            transform: scale(0.97);
        }
</style>
<head>

    <link rel="stylesheet" type="text/css" href="/css/ChangePassword.css">
</head>
<body>
    <div class="AR">
        <div class="format">
            <h2>Edit Department</h2>

            <form asp-action="EditCategory" method="post">
                <div class="form-group" style="margin: 20px;">
                    <label asp-for="CategoryName"></label>
                    <input asp-for="CategoryName" class="input" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="CategoryId" />

                <center>   <button type="submit" class="submitBtn">Save Changes</button> </center>
            </form>
        </div>
    </div>

</body>