@using ProjectX.ViewModels
@model CategoryViewModel
<html>
    <head>
<style>
    .Create {
        padding: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .form1{
            display: flex;
            flex-direction: column;
            align-items: center;
    }

        .format {
            width: 700PX;
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            margin: 20PX;
            display: flex;
            justify-content: center;
        }
        .input {
            max-width: 190px;
            background-color: #f5f5f5;
            color: #242424;
            min-height: 40px;
            border-radius: 4px;
            outline: none;
            border: none;
            line-height: 1.15;
            box-shadow: 0px 10px 20px -18px;
            padding-inline: 10px;
            margin-inline: 5px;
        }

        input:focus {
            border-bottom: 2px solid #5b5fc7;
            border-radius: 4px 4px 2px 2px;
        }

        input:hover {
            outline: 1px solid lightgrey;
        }

        .submitBtn {
            width: 120px;
            height: 40px;
            border-radius: 30px;
            border: none;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.13);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            font-weight: 600;
            cursor: pointer;
            color: white;
            background: linear-gradient(136deg, #0f0c29, #302b63, #24243e);
            letter-spacing: 0.7px;
       
        }

            .submitBtn:hover .arrow {
                animation: slide-in-left 0.6s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
            }



            .submitBtn:active {
                transform: scale(0.97);
            }

        .div_btn{
           padding-top:10PX;
        }
</style>
</head>
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout2";
}


<body>
    <div class="Create">
    <h2>Create Category</h2>
    <div class="format">
        <form class="form1" asp-action="CreateCategory" method="post">
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input class="input" asp-for="CategoryName" placeholder="Write the name of category">
        <span asp-validation-for="CategoryName" class="text-danger" style="margin-inline:5px"></span>
    </div>
                <div class="div_btn">
                    <button type="submit" class="submitBtn">
                       Create
                        <svg fill="white" viewBox="0 0 448 512" height="1em" class="arrow">
                            <path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"></path>
                        </svg>
                    </button>
                </div>
 </form>
 </div>
</div>

</body>

</html>