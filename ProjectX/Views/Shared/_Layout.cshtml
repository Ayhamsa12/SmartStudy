<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] SmartStudy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/ProjectX.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            padding-top: 0.3125rem;
            padding-bottom: 0.3125rem;
            margin-right: 1rem;
            font-size: 1.25rem;
            text-decoration: none;
            white-space: nowrap;
            font-weight: 700;
            color: black;
        }

            .navbar-brand:hover {
                color: black;
            }

        .href_1 {
            text-decoration: none;
            background: none;
            color: white;
            border: 0px;
            color: black;
            text-transform: uppercase;
            transition: 0.5s;
            display: block;
        }

            .href_1:hover {
                display: contents;
                background: none;
                color: white;
                border: 0px;
                color: black;
                text-transform: uppercase;
                transition: 0.5s;
            }

    </style>
</head>
<body>

    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SmartStudy</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 justify-content-end">

                        <li class="nav-item">
                            @{
                                var isAuthenticated = User.Identity.IsAuthenticated;
                                var isAdmin = isAuthenticated && User.IsInRole("admin");
                            }



                            @if (isAuthenticated)
                            {
                                <label class="popup">
                                    <input type="checkbox">
                                    <div class="burger" tabindex="0">
                                        <span></span>
                                        <span></span>
                                        <span></span>
                                    </div>
                                    <nav class="popup-window">
                                        <ul>

                                            @if (isAdmin)
                                            {
                                                <li>
                                                    <button class="BUTTON_MENU">
                                                        <span style=" font-size: 20px;">
                                                            <a class="href_1" asp-action="Index" asp-controller="AdminDashboard">Dashboard</a>
                                                        </span>
                                                    </button>
                                                </li>
                                            }

                                            <li>
                                                <button class="BUTTON_MENU">
                                                    <span style=" font-size: 20px;">
                                                        <a class="href_1" asp-action="ProfileUser" asp-controller="Account">Profile</a>
                                                    </span>
                                                </button>
                                            </li>
                                            <li>
                                                <form asp-area="" asp-controller="Account" asp-action="Logout">
                                                    <button class="BUTTON_MENU">
                                                        <span style="font-size: 20px; color: red;">

                                                            Logout

                                                        </span>
                                                    </button>
                                                </form>
                                            </li>

                                        </ul>
                                    </nav>
                                </label>
                            }


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="sidebar">
        <div class="emojis"> <a asp-area="" asp-controller="Home" asp-action="Index" class="ABC"> <img src="/home.png" class="imgs_2"> Home</a></div>
        <div class="emojis"> <a asp-action="Category" asp-controller="Category" class="ABC"> <img src="/corporate.png" class="imgs_2"> Departments</a> </div>
        <div class="emojis"> <a asp-action="SubmitRequest" asp-controller="Request" class="ABC"> <img src="/add-file.png" class="imgs_2">  Add Summary </a> </div>
        <div class="emojis"> <a asp-controller="Account" asp-action="Saved" class="ABC"> <img src="/saved_things.png" class="imgs_2"> Saved Questions</a> </div>
        <div class="emojis"> <a asp-action="QandA" asp-controller="QandA" class="ABC"> <img src="/qANDa.png" class="imgs_2">   QandA</a> </div>
        <div class="emojis"> <a asp-action="About_us" asp-controller="Home" class="ABC">    <img src="/group.png" class="imgs_2">   ABOUT US</a> </div>

    </div>
    <div class="vertical-line"></div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
